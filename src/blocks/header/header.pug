include ../button/button.pug

mixin header({login: login, name: name, activeLink: activeLink})
  header.header 
    .container 
      .header__wrapper.js-header__wrapper
        .header__logo
          a(href="landing-page") 
            img(src=require("/src/blocks/header/icons/main-logo.svg"), alt="logo")
        nav.header__nav
          ul.header__list 
            li
              .header__list-item
                if activeLink == 1
                  a.header__list-link.header__list-link_active(href="unset") О нас
                else
                  a.header__list-link(href="unset") О нас
            li
              .header__list-item
                if activeLink == 2
                  a.header__list-link.header__list-link_active(href="unset") Услуги
                else 
                  a.header__list-link(href="unset") Услуги
                .header__list-arrow.js-header__list-arrow
              ul.header__dropdown
                each dropdownLink in ["Услуги ссылка 1", "Услуги ссылка 2", "Услуги ссылка 3"]
                  li.header__dropdown-item 
                    a.header__dropdown-link(href="unset")= dropdownLink
            li
              .header__list-item
                if activeLink == 3
                  a.header__list-link.header__list-link_active(href="unset") Вакансии
                else 
                  a.header__list-link(href="unset") Вакансии
            li 
              .header__list-item
                if activeLink == 4
                  a.header__list-link.header__list-link_active(href="unset") Новости
                else 
                  a.header__list-link(href="unset") Новости
            li
              .header__list-item
                if activeLink == 5
                  a.header__list-link.header__list-link_active(href="unset") Соглашения
                else 
                  a.header__list-link(href="unset") Соглашения
                .header__list-arrow.js-header__list-arrow
              ul.header__dropdown
                each dropdownLink in ["Соглашения ссылка 1", "Соглашения ссылка 2", "Соглашения ссылка 3"]
                  li.header__dropdown-item 
                    a.header__dropdown-link(href="unset")= dropdownLink
            
            if (login == true)
              li
                .header__user
                  .header__line 
                  a.header__name.header__list-link(href="unset")= name
        if (login == false)
          .header__buttons
            .header__buttons-login.header__buttons-login-set-size
              
                +button({label: "войти", type: "invert", link: "login"})
            .header__buttons-register.header__buttons-register-set-size

                +button({label: "зарегистрироваться", type: "filed", link: "registration"})

      .header__hamburger.js-header__hamburger 
        span 
        span 
        span 
