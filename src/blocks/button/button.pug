mixin button({label: label, type: type, width: width, height: height, link: link})
  .button__wrapper.js-button__wrapper
    if (type == "filed") 
      if (link)
        a(href= link) 
          button.button.button_type_filed= label
      else 
        button.button.button_type_filed= label
    if (type == "invert") 
      if (link)
        a(href= link)
          .button__wrapper-invert
            button.button.button_type_invert.js-button_type_invert(type="button")= label 
      else
        .button__wrapper-invert
          button.button.button_type_invert.js-button_type_invert= label
    if (type == "icon")
      button.button.button_type_icon(type="button")= label
    if (type == "wide") 
      button.button.button_type_wide.js-button_type_wide(type="button")= label
      .button__arrow.js-button__arrow
        .button__arrow-line
        .button__arrow-line
        