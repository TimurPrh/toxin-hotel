mixin button({label: label, type: type})
    .button__wrapper
        if (type == "filed") 
            button.button.text-h3.button_type_filed= label
        if (type == "invert") 
            button.button.text-h3.button_type_invert= label
        if (type == "icon") 
            button.button.text-h3.button_type_icon= label
        if (type == "wide") 
            button.button.text-h3.button_type_wide= label
            .button__arrow
                .button__arrow-line
                .button__arrow-line
        