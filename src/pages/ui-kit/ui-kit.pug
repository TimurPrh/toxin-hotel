doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title ui-kit
    body 
        section.color-and-types 
            include ../blocks/kit-section-name/kit-section-name.pug
            .container
                .color-and-types__header 
                    +kit-section-name("Color & Type")
                .color-and-types__wrapper 
                    .color-and-types__palette
                        - var colorsListName = ["Dark Shade 100%", "Dark Shade 75%", "Dark Shade 50%", "Dark Shade 25%", "Dark Shade 5%", "Purple", "Green"]
                        - var colorsListDesc = ["#1F2041", "#1F2041", "#1F2041", "#1F2041", "#1F2041", "#BC9CFF", "#6FCF97"]
                        - var colorsListRef = ["#1F2041", "rgba(31, 32, 65, 0.75)", "rgba(31, 32, 65, 0.5)", "rgba(31, 32, 65, 0.25)", "rgba(31, 32, 65, 0.05)", "#BC9CFF", "#6FCF97"]
                        include ../blocks/color-palette/color-palette.pug
                        - for (var x = 0; x < 7; x++)
                            .color-and-types__palette-item
                                +color-palette(colorsListName[x], colorsListDesc[x], colorsListRef[x])
                    
                    .color-and-types__text-types 
                        .color-and-types__text-types-header.text-h1 H1
                        .color-and-types__text-types-desc.text-h1 This one is the sub-section or 
                                        br
                                        |widget title
                        .color-and-types__text-types-header.text-h2 H2
                        .color-and-types__text-types-desc.text-h2 Next one is the item title inside 
                                        br
                                        |widgets
                        .color-and-types__text-types-header.text-h3 H3
                        .color-and-types__text-types-desc.text-h3 This is a label or CTA text
                        .color-and-types__text-types-header.text-body body
                        .color-and-types__text-types-desc.text-body This is the body text which is used for most
                                        br
                                        |of the design, like paragraphs, lists, etc.

        .section.form-elements 
            
            .container
                include ../blocks/text-field/text-field.pug
                include ../blocks/dropdown/dropdown.pug
                include ../blocks/date-dropdown/date-dropdown.pug
                include ../blocks/input-button/input-button.pug
                include ../blocks/rate-button/rate-button.pug
                include ../blocks/expandable-checkbox-list/expandable-checkbox-list.pug
                include ../blocks/rich-checkbox-buttons/rich-checkbox-buttons.pug
                include ../blocks/bullet-list/bullet-list.pug
                include ../blocks/room-details/room-details.pug
                include ../blocks/feedback/feedback.pug
                include ../blocks/range-slider/range-slider.pug
                include ../blocks/button/button.pug
                include ../blocks/pagination/pagination.pug

                .form-elements__header 
                    +kit-section-name("Form Elements")
                
                .form-elements__wrapper 
                    .form-elements__fst-col

                        .form-elements__text-field
                            +text-field({id: "test_field_1", label: "text field", desc: "default", placeholder: "Email"})
                        .form-elements__text-field
                            +text-field({id: "test_field_2", label: "text field", desc: "hover / focus", text: "This is pretty awesome"})

                        .form-elements__dropdown
                            +dropdown({id: "dropdown_1", type: "guests", label: "dropdown"})

                        .form-elements__text-field
                            +text-field({id: "test_field_3", label: "masked text field", desc: "default", mask: true})

                        .form-elements__date-dropdown
                            +date-dropdown({type: "split", label: "date Dropdown", labelTo: "date Dropdown"})
                        .form-elements__date-dropdown.form-elements__date-dropdown_slim
                            +date-dropdown({type: "filter", label: "filter date dropdown"})

                        .form-elements__text-field.form-elements__text-field_slim
                            +text-field({id: "test_field_4", label: "subscription text field", placeholder: "Email", arrow: true})
                        
                        .form-elements__dropdown.form-elements__dropdown_slim
                            +dropdown({id: "dropdown_3", type: "room", label: "dropdown", desc: "default"})
                        .form-elements__dropdown.form-elements__dropdown_slim
                            +dropdown({type: "room", label: "dropdown", desc: "expanded"})

                        div
                            .form-elements__expandable-checkbox-list
                                +expandable-checkbox-list({name: "checkbox_list_1", header: "expandable checkbox list", labels: ["Завтрак", "Письменный стол", "Стул для кормления", "Кроватка", "Телевизор", "Шампунь"]})
                            .form-elements__expandable-checkbox-list
                                +expandable-checkbox-list({name: "checkbox_list_2", header: "expandable checkbox list", labels: ["Завтрак", "Письменный стол", "Стул для кормления", "Кроватка", "Телевизор", "Шампунь"]})

                    .form-elements__snd-col
                        .form-elements__checkbox-buttons
                            .text-h3 Checkbox Buttons
                            .form-elements__checkbox-buttons-list   
                                +input-button({type: "checkbox", id: "smoking", label: "Можно курить"})
                                +input-button({type: "checkbox", id: "pets", label: "Можно с питомцами"})
                                +input-button({type: "checkbox", id: "guests", label: "Можно пригласить гостей (до 10 человек)"})

                        .form-elements__radio-buttons
                            .text-h3 Radio Buttons
                            .form-elements__radio-buttons-list
                                +input-button({type: "radio", name:"gender", id:"gender_male", label: "Мужчина"})
                                +input-button({type: "radio", name:"gender", id:"gender_female", label: "Женщина"})

                        .form-elements__toggle-buttons
                            .text-h3 Toggle
                            .form-elements__toggle-buttons-list
                                +input-button({type: "switch", id:"special_offer_1", label: "Получать спецпредложения"})
                                +input-button({type: "switch", id:"special_offer_2", label: "Получать спецпредложения"})

                        .form-elements__like-buttons
                            .text-h3 like button
                            .form-elements__like-buttons-list
                                +input-button({type: "like", id: "like_1", label: "2"})
                                +input-button({type: "like", id: "like_2", label: "12"})

                        .form-elements__rate-buttons
                            .text-h3 rate button
                            .form-elements__rate-buttons-list
                                +rate-button({id: "rate_1", rate: "3"})
                                +rate-button({id: "rate_2", rate: "4"})

                        .form-elements__dropdown
                            +dropdown({id: "dropdown_2", type: "guests", label: "dropdown"})

                        .form-elements__rich-checkbox-buttons
                            +rich-checkbox-buttons({name: "rich-checkbox", header: "rich checkbox buttons", labels: [["Широкий коридор", "Ширина коридоров в номере не менее 91 см."], ["Помощник для инвалидов", "На 1 этаже вас встретит специалист  и проводит до номера."]]})

                    .form-elements__trd-col

                        .form-elements__range-slider
                            +range-slider({header: "Range Slider"})
                        .form-elements__buttons
                            .text-h3 buttons
                            .form-elements__buttons-wrapper 
                                +button({label: "CLICK ME", type: "filed"})
                                +button({label: "CLICK ME", type: "filed"})
                            .form-elements__buttons-wrapper 
                                +button({label: "CLICK ME", type: "invert"})
                                +button({label: "CLICK ME", type: "invert"})
                            .form-elements__buttons-wrapper 
                                +button({label: "CLICK ME", type: "icon"})
                                +button({label: "CLICK ME", type: "icon"})
                            +button({label: "перейти к оплате", type: "wide"})

                        .form-elements__pagination
                            .text-h3 pagination
                            +pagination({})

                        .form-elements__dropdown
                            +dropdown({id: "dropdown_2", type: "guests", label: "dropdown"})

                        .form-elements__bullet-list
                            +bullet-list({header: "bullet list", labels: ["Нельзя с питомцами", "Без вечеринок и мероприятий", "Время прибытия — после 13:00, а выезд до 12:00"]})

                    .form-elements__fourt-col
                        .form-elements__room-details
                            +room-details({items: [["Комфорт", "Шумопоглощающие стены", "insert_emoticon-min.svg"], ["Удобство", "Окно в каждой из спален", "location_city-min.svg"]]})

                    .form-elements__fifth-col
                        .form-elements__feedback
                            +feedback({name: "Мурад Сарафанов", icon: "photo.png", time: "5 дней назад", text: "Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.", likes: "11"})

            